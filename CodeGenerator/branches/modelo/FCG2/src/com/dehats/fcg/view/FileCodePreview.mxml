<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import codegen.generation.GeneratedFile;
			
			[Bindable]
			public var fileName:String;
			
			// Note that everything is rendered as ActionScript, to keep MXML files readable
			// It does not affect much PHP files
			[Bindable]
			public var fileType:String="actionscript";
			[Bindable]
			public var fileCode:String;			
			
			[Bindable]			
			private var syntaxHBegin:String='<html>' + 
				'<head>' + 
				'<link type="text/css" rel="stylesheet" href="syntax_highlight/SyntaxHighlighter.css"></link>' + 
				'<script language="javascript" src="syntax_highlight/shCore.js"></script>' + 
				'<script language="javascript" src="syntax_highlight/shBrushAS3.js"></script>' + 
				'<script language="javascript" src="syntax_highlight/shBrushXml.js"></script>' + 
				'<script language="javascript" src="syntax_highlight/shBrushPhp.js"></script>' + 					
				'<script language="javascript">' + 
				'window.onload = function () {' + 
				'dp.SyntaxHighlighter.ClipboardSwf = "syntax_highlight/clipboard.swf";' + 
				'dp.SyntaxHighlighter.HighlightAll("code");' + 
				'}' + 
				'</script>' + 
				'</head>' + 
				'<body>' + 
				'<textarea name="code" class="'+fileType+':nocontrols">';
			
			[Bindable]
			private var syntaxHEnd:String="</textarea><p>teste</p></body></html>";
			
		]]>
	</mx:Script>
	
	<!--<mx:HTML htmlText="{ syntaxHBegin+fileCode+syntaxHEnd}" width="100%" height="100%" id="html1"/>-->
	
	
