<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:familia="com.app.views.familia.*"
			   xmlns:item="com.app.views.item.*"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:swiz="http://swiz.swizframework.org"
			   xmlns:beans="com.app.beans.*"
			   xmlns:reports="com.app.views.reports.*"
			   minWidth="955"
			   minHeight="600" xmlns:beans1="org.commnoslibs.report.beans.*" xmlns:views="org.commnoslibs.report.views.*">

	<fx:Metadata>
		[Inject(source="reportController.dataProvider",destination="reportDataProvider",bind="true")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
		]]>
	</fx:Script>

	<fx:Declarations>
		<s:ArrayCollection id="reportDataProvider"/>
		<swiz:Swiz>
			<swiz:config>
				<swiz:SwizConfig eventPackages="com.app.events.*, org.commonsLibs.swiz.events.*, org.commnoslibs.report.events.*"
								 setUpEventType="{ FlexEvent.CREATION_COMPLETE }"
								 viewPackages="com.app.views.*,org.commonsLibs.report.views.*"/>
			</swiz:config>
			<swiz:beanProviders>
				<beans:Beans/>
				<beans1:ReportBeans/>
			</swiz:beanProviders>
		</swiz:Swiz>
	</fx:Declarations>

	<mx:ApplicationControlBar dock="true">
		<mx:Text text="Aplicação"/>
	</mx:ApplicationControlBar>
	<mx:HDividedBox width="100%"
					height="100%">
		<mx:VBox width="100%"
				 height="100%"
				 maxWidth="300">
			<mx:ButtonBar width="100%"
						  dataProvider="{ vw }"
						  direction="vertical"/>
			<mx:Tree id="reportList" dataProvider="{reportDataProvider}" width="100%" height="100%"/>
		</mx:VBox>
		<mx:ViewStack id="vw"
					  width="100%"
					  height="100%"
					  paddingBottom="8">
			<item:ItemView/>
			<familia:FamiliasView/>
			<reports:ItemPorFamilia/>
			<views:ReportView/>
		</mx:ViewStack>
	</mx:HDividedBox>
</s:Application>
